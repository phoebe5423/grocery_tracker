<!DOCTYPE html>
<html lang="en">

<head>
    <title>Product List</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1 class="display-4 text-center py-1">Product List</H1>
        <!-- input area -->
        <div class="jumbotron p-3 shadow-sm">
            <form action="/search" method="post">
                <div class="d-flex align-items-center">
                    <input autofocus autocomplete="off" class="form-control mr-3" type="text" style="flex: 1;" id="keyword" placeholder="Search Product Name" name="keyword">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
        <!-- // input area -->
        <!-- list area -->
        <ul class="list-group pb-5">
            <% for(list in data) { %>
                <li class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                    <span class="item-text">
                        <%- data[list].Name %>
                    </span>
                    <span class="item-text">
                        <%- data[list].PLUcode %>
                    </span>
                    <span class="item-text">
                        <%- data[list].Lifespan %>
                    </span>
                    <span class="item-text">
                        <%- data[list].Calories %>
                    </span>
                    <div>
                        <a href="toUpdate/<%- data[list].ProductID %>">
                            <button class="edit-me btn btn-secondary btn-sm mr-1">Edit</button>
                        </a>
                        <a href="delete/<%- data[list].ProductID %>">
                            <button class="btn btn-primary">Delete</button>
                        </a>
                    </div>
                </li>
                <% } %>

                    <!-- //list area -->
    </div>
    <div class="d-flex align-items-center">
        <a href="add">
            <button class="btn btn-primary">Add Product Item</button>
        </a>
    </div>
    </ul>
</body>

</html>